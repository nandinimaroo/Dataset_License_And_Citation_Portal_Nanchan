<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel</title>
    <link rel="stylesheet" type="text/css" href="path/to/your/styles.css">
    <!-- Add any additional styles or libraries as needed -->
</head>
<body>
    <h1>Admin Panel</h1>
    <ul>
        <% licenses.forEach((license) => { %>
        <li>
            <strong>License Name:</strong> <%= license.name %><br>
            <strong>License Info:</strong> <%= license.info %><br>
            <strong>Status:</strong> 
            <% if (license.pending) { %>
                <span style="color: orange;">Pending</span>
                <form method="POST" action="/admin/accept-license/<%= license._id %>">
                    <button type="submit">Accept</button>
                </form>
                <form method="POST" action="/admin/deny-license/<%= license._id %>">
                    <button type="submit">Deny</button>
                </form>
            <% } else { %>
                <span style="color: green;">Accepted</span>
            <% } %>
            <hr>
        </li>
        <% }); %>
    </ul>
</body>
</html>
